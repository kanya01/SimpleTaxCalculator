
<h1>Income Tax Calculator</h1>
<%= form_with url: result_tax_calculators_path, method: :get, local: true do |form| %>
  <div>
    <%= form.label :income, "Enter your income:" %>
    <%= form.text_field :income %>
  </div>
  <div>
    <%= form.submit "Calculate Tax" %>
  </div>
  <% if @form.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@form.errors.count, "error") %> prohibited this income from being calculated:</h2>
      <ul>
        <% @form.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>
